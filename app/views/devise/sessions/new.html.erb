<div class="mt-10 space-y-5">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="m-2">
    <%= f.label :email, class: "text-sm mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full text-black text-sm px-4 py-3 rounded outline-none border-2 focus:border-blue-500", placeholder:"Email" %>
  </div>

  <div class="m-2">
    <%= f.label :password, "Senha", class: "text-sm mb-2" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"w-full text-black text-sm px-4 py-3 rounded outline-none border-2 focus:border-blue-500", placeholder:"Senha" %>
  </div>

<div class="flex items-center mt-5 justify-between gap-4">
  <% if devise_mapping.rememberable? %>
    <div class="flex items-center">
      <%= f.check_box :remember_me, class:"h-4 w-4 shrink-0 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= f.label :remember_me, class:"ml-3 block text-sm" %>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
  <div class="!mt-10">
    <%= f.submit "Entrar", class:"w-full py-2.5 px-4 text-sm rounded text-white bg-lime-600 hover:bg-lime-700 focus:outline-none" %>
  </div>
<% end %>

