<div class="max-w-4xl flex items-center mx-auto md:h-screen p-4">
<div class="grid md:grid-cols-3 items-center shadow-[0_2px_10px_-3px_rgba(6,81,237,0.3)] rounded-xl overflow-hidden">
  <div class="max-md:order-1 flex flex-col justify-center space-y-16 max-md:mt-16 min-h-full bg-gradient-to-r from-gray-900 to-gray-700 lg:px-8 px-4 py-4">
    <div>
      <h4 class="text-white text-lg font-semibold">Crie sua conta</h4>
      <p class="text-[13px] text-white mt-2">Bem-vindo à nosso site de programação! Comece criando sua conta.</p>
    </div>
    <div>
      <h4 class="text-white text-lg font-semibold">Registro simples e seguro</h4>
      <p class="text-[13px] text-white mt-2">Nosso processo de registro foi projetado para ser simples e seguro. Priorizamos sua privacidade e segurança de dados.</p>
    </div>
  </div>
  <div class="md:col-span-2 w-full py-6 px-6 sm:px-16">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-6">
      <h3 class="text-2xl font-bold">Crie a sua conta aqui</h3>
    </div>

    <div class="space-y-2">
      <%= f.label :name, "Nome", class:"text-sm block" %>
      <div class="relative flex items-center">
      <%= f.text_field :name, autofocus: true, class:"bg-white text-black border border-gray-300 w-full text-sm px-4 py-2.5 rounded-md outline-blue-500", placeholder:"Insira o nome" %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="#bbb" stroke="#bbb" class="w-4 h-4 absolute right-4" viewBox="0 0 24 24">
          <circle cx="10" cy="7" r="6" data-original="#000000"></circle>
          <path d="M14 15H6a5 5 0 0 0-5 5 3 3 0 0 0 3 3h12a3 3 0 0 0 3-3 5 5 0 0 0-5-5zm8-4h-2.59l.3-.29a1 1 0 0 0-1.42-1.42l-2 2a1 1 0 0 0 0 1.42l2 2a1 1 0 0 0 1.42 0 1 1 0 0 0 0-1.42l-.3-.29H22a1 1 0 0 0 0-2z" data-original="#000000"></path>
        </svg>
    </div>

    <div class="space-y-2">
      <%= f.label :email, class:"text-sm block" %>
      <div class="relative flex items-center">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-white border text-black border-gray-300 w-full text-sm px-4 py-2.5 rounded-md outline-blue-500", placeholder:"Insira seu email" %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="#bbb" stroke="#bbb" class="w-4 h-4 absolute right-4" viewBox="0 0 682.667 682.667">
        <defs>
          <clipPath id="a" clipPathUnits="userSpaceOnUse">
            <path d="M0 512h512V0H0Z" data-original="#000000"></path>
          </clipPath>
        </defs>
        <g clip-path="url(#a)" transform="matrix(1.33 0 0 -1.33 0 682.667)">
          <path fill="none" stroke-miterlimit="10" stroke-width="40" d="M452 444H60c-22.091 0-40-17.909-40-40v-39.446l212.127-157.782c14.17-10.54 33.576-10.54 47.746 0L492 364.554V404c0 22.091-17.909 40-40 40Z" data-original="#000000"></path>
          <path d="M472 274.9V107.999c0-11.027-8.972-20-20-20H60c-11.028 0-20 8.973-20 20V274.9L0 304.652V107.999c0-33.084 26.916-60 60-60h392c33.084 0 60 26.916 60 60v196.653Z" data-original="#000000"></path>
        </g>
      </svg>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, "Senha", class: "text-sm block" %>
      <% if @minimum_password_length %>
      <em class="text-sm">(<%= @minimum_password_length %> caracteres no mínimo)</em>
      <% end %><br />
      <div class="relative flex items-center">
      <%= f.password_field :password, autocomplete: "new-password", class:"bg-white text-black border border-gray-300 w-full text-sm px-4 py-2.5 rounded-md outline-blue-500", placeholder:"Insira uma Senha" %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="#bbb" stroke="#bbb" class="w-4 h-4 absolute right-4 cursor-pointer" viewBox="0 0 128 128">
        <path d="M64 104C22.127 104 1.367 67.496.504 65.943a4 4 0 0 1 0-3.887C1.367 60.504 22.127 24 64 24s62.633 36.504 63.496 38.057a4 4 0 0 1 0 3.887C126.633 67.496 105.873 104 64 104zM8.707 63.994C13.465 71.205 32.146 96 64 96c31.955 0 50.553-24.775 55.293-31.994C114.535 56.795 95.854 32 64 32 32.045 32 13.447 56.775 8.707 63.994zM64 88c-13.234 0-24-10.766-24-24s10.766-24 24-24 24 10.766 24 24-10.766 24-24 24zm0-40c-8.822 0-16 7.178-16 16s7.178 16 16 16 16-7.178 16-16-7.178-16-16-16z" data-original="#000000"></path>
      </svg>
      </div>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmar Senha", class: "text-sm block" %>
      <div class="relative flex items-center">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"bg-white text-black border border-gray-300 w-full text-sm px-4 py-2.5 rounded-md outline-blue-500", placeholder:"Confirme a senha" %>
      </div>
    </div>
    </div>

    <div class="!mt-10">
      <%= f.submit "Registrar-se", class:"w-full py-3 px-4 text-sm font-semibold rounded text-white bg-gray-700 hover:bg-gray-800 focus:outline-none" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>
</div>